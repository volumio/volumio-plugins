
[Unit]
Description=brutefir Daemon
After=syslog.target

[Service]
Type=simple
ExecStart=/usr/bin/brutefir /data/configuration/audio_interface/brutefir/volumio-brutefir-config
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=volumio
User=root
Group=root

[Install]
WantedBy=multi-user.target

