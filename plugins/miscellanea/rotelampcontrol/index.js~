// Define a method to clear, add, and play an array of tracks
rotelampcontrol.prototype.clearAddPlayTrack = function(track) {
	var self = this;
	self.commandRouter.pushConsoleMessage('[' + Date.now() + '] ' + 'rotelampcontrol::clearAddPlayTrack');

	self.commandRouter.logger.info(JSON.stringify(track));

	return self.sendSpopCommand('uplay', [track.uri]);
};

rotelampcontrol.prototype.seek = function (timepos) {
    this.commandRouter.pushConsoleMessage('[' + Date.now() + '] ' + 'rotelampcontrol::seek to ' + timepos);

    return this.sendSpopCommand('seek '+timepos, []);
};

