      </key>
      <key width="2000">
        <default display="\" />
        <shifted display="/" />
        <mod3    display="Home" action="home" />
      </key>
      <space width="500" extended="true" />
      <key extended="true">
        <default display="Del" action="delete" />
      </key>
      <key extended="true">
        <default display="End" action="end" />
      </key>
      <key extended="true">
        <default display="PgDn" action="pagedown" />
      </key>
      <space width="500" extended="true" />
    </row>

    <row>
      <space width="500" extended="true" />
      <key width="2600">
        <default display="Caps" action="modifier:caps" />
